@{
    ViewBag.Title = "Map";
}

<h2>Map</h2>

<div id="map_wrapper">
    <div id="map_canvas" class="mapping" style="width: 100%; height: 600px;"></div>
</div>

@section scripts {
    <script type="text/javascript">
        jQuery(function ($) {
            // Asynchronously Load the map API 
            var script = document.createElement('script');
            script.src = "http://maps.googleapis.com/maps/api/js?sensor=false&callback=initialize";
            document.body.appendChild(script);
        });

        function initialize() {
            var map;
            var bounds = new google.maps.LatLngBounds();
            var mapOptions = {
                mapTypeId: 'roadmap'
            };

            // Display a map on the page
            map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);
            
            $.getJSON("/api/Stop", null, function (data) {  
                for (var i = 0; i < data.length; i++) {
                    var position = new google.maps.LatLng(data[i].stop_lat, data[i].stop_lon);
                    bounds.extend(position);
                    marker = new google.maps.Marker({
                        position: position,
                        map: map,
                        title: data[i].stop_name
                    });
                }

                // Automatically center the map fitting all markers on the screen
                map.fitBounds(bounds);
            });

            $.getJSON("/api/Shape", null, function (data) {

                var c = 0;

                var last_shape_id = "";
                var path = new Array();
                // Loop through our array of markers & place each one on the map  
                for (var i = 0; i < data.length; i++) {
                    var position = new google.maps.LatLng(data[i].shape_pt_lat, data[i].shape_pt_lon);
                    bounds.extend(position);
                    if (last_shape_id != data[i].shape_id) {
                        if (path.length > 0) {
                            var poly = new google.maps.Polyline({
                                path: path,
                                strokeColor: '#FF0000',
                                strokeOpacity: 1.0,
                                strokeWeight: 5
                            });

                            poly.setMap(map);
                            path = new Array();
                        }
                        last_shape_id = data[i].shape_id;
                    }
                    path.push(position);
                }

                if (path.length > 0) {
                    var poly = new google.maps.Polyline({
                        path: path,
                        strokeColor: '#FF0000',
                        strokeOpacity: 1.0,
                        strokeWeight: 5
                    });
                    poly.setMap(map);
                }
                map.fitBounds(bounds);
            });
        }
    </script>
}